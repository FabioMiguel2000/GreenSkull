<lsf>

<!--Initials-->
    <initials>
        <reference length="2" />
        <root id="Root" />

    </initials>
<!-- -->

<!--Cameras-->
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" />
        </ortho>
    </views>
<!-- -->

<!--Illumination-->
    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />          
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        
    </illumination>
<!-- -->

<!--Lights-->
    <lights>
        <light id="demoLight">            
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />                   
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            
        </light>
    </lights>
<!-- -->


<!--Textures-->
    <textures>

        <!--Textura para tampo da mesa-->
        <texture id="wood" path="scenes/images/woodTexture.jpg" />
        <!--Textura para bulbo da lampada-->
        <texture id="light" path="scenes/images/bulbTexture.jpg" />
        <!--Textura para perna da mesa-->
        <texture id="steel" path="scenes/images/steelTexture.jpg" />
        <!--Textura para o chao-->
        <texture id="floor" path="scenes/images/floorTexture.jpg" />
        <!--Textura para a janela-->
        <texture id="window" path="scenes/images/windowTexture.jpg" />
        <!--Textura para a parede-->
        <texture id="wall" path="scenes/images/wallTexture.jpg" />
        <!--Textura para a guardanapo-->
        <texture id="napkin" path="scenes/images/napkinTexture.jpg" />
        <!--Textura para a donut-->
        <texture id="donut" path="scenes/images/donutTexture.jpg" />
    </textures>
<!-- -->

<!--Materials-->
    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>
<!-- -->


<!--Nodes-->
    
    <nodes>

        <!--Root node-->
        <node id="Root">
            <material id="null" />

            <texture id="null"/>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="Mesa" />
                <noderef id="Chao" />
                <noderef id="Luzes" />
                <noderef id="Parede"/>
            </descendants>
        </node>
        <!-- -->


        <!--Chao-->
        <node id="Chao">
            <material id="null" />

            <texture id="floor"/>

            <transformations>
                <rotation axis="x" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-15" y1="-15" x2="15" y2="15"/>
            </descendants>
        </node>
        <!-- -->


        <!--Luzes-->
        <node id="Luzes">
            <material id="null" />

            <texture id="null"/>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="Luz 1" />
                <noderef id="Luz 2" />
                <noderef id="Luz 3" />
            </descendants>
        </node>
        <!-- -->


        <!--Luz 1-->
        <node id="Luz 1">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="8" y="15" z="0"/>
            </transformations>

            <descendants>
                <noderef id="Candeeiro" />
            </descendants>
        </node>
        <!-- -->


        <!--Luz 2-->
        <node id="Luz 2">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="-6" y="15" z="-6"/>
            </transformations>

            <descendants>
                <noderef id="Candeeiro" />
            </descendants>
        </node>
        <!-- -->


        <!--Luz 3-->
        <node id="Luz 3">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="-6" y="15" z="6"/>
            </transformations>

            <descendants>
                <noderef id="Candeeiro" />
            </descendants>
        </node>
        <!-- -->

        <!--Candeeiro-->
        <node id="Candeeiro">
            <material id="null" />

            <texture id="null"/>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="Lampada" />
                <noderef id="Encaixo" />
                <noderef id="fio" />
                <noderef id="Protecao" />
            </descendants>
        </node>
        <!-- -->


        <!--Protecao do Candeeiro-->
        <node id="Protecao">
            <material id="null" />

            <texture id="null"/>     

            <transformations>
            </transformations>

            <descendants>
                <node type="Triangle1"/>
                <node type="Triangle2"/>
                <node type="Triangle3"/>
                <node type="Triangle4"/>
            </descendants>
        </node>
        <!-- -->

        <!--Tri창ngulo da Protecao do Candeeiro-->
        <node id="Triangulo1">
            <material id="null" />

            <texture id="null"/>     

            <transformations>
                <translation x="-1" y="0" z="0"/>
                <rotation axis="y" rotation="90"/>
                <rotation axis="x" rotation="45"/>
            </transformations>

            <descendants>
                <leaf type="triangle" x1="0" y1="2" x2="2" y2="0" x3="-2" y3="0" />
                <leaf type="triangle" x1="0" y1="2" x2="-2" y2="0" x3="2" y3="0" />
            </descendants>
        </node>
        <!-- -->

        <!--Tri창ngulo da Protecao do Candeeiro-->
        <node id="Triangulo2">
            <material id="null" />

            <texture id="null"/>     

            <transformations>
                <translation x="0" y="0" z="1"/>
                <rotation axis="y" rotation="180"/>
                <rotation axis="x" rotation="45"/>
            </transformations>

            <descendants>
                <leaf type="triangle" x1="0" y1="2" x2="2" y2="0" x3="-2" y3="0" />
                <leaf type="triangle" x1="0" y1="2" x2="-2" y2="0" x3="2" y3="0" />
            </descendants>
        </node>
        <!-- -->

        <!--Tri창ngulo da Protecao do Candeeiro-->
        <node id="Triangulo3">
            <material id="null" />

            <texture id="null"/>     

            <transformations>
                <translation x="1" y="0" z="0"/>
                <rotation axis="y" rotation="270"/>
                <rotation axis="x" rotation="45"/>
            </transformations>

            <descendants>
                <leaf type="triangle" x1="0" y1="2" x2="2" y2="0" x3="-2" y3="0" />
                <leaf type="triangle" x1="0" y1="2" x2="-2" y2="0" x3="2" y3="0" />
            </descendants>
        </node>
        <!-- -->

        <!--Tri창ngulo da Protecao do Candeeiro-->
        <node id="Triangulo4">
            <material id="null" />

            <texture id="null"/>     

            <transformations>
                <translation x="0" y="0" z="-1"/>
                <rotation axis="x" rotation="45"/>
            </transformations>

            <descendants>
                <leaf type="triangle" x1="0" y1="2" x2="2" y2="0" x3="-2" y3="0" />
                <leaf type="triangle" x1="0" y1="2" x2="-2" y2="0" x3="2" y3="0" />
            </descendants>
        </node>
        <!-- -->

        <!--Lampada-->
        <node id="Lampada">
            <material id="null" />

            <texture id="light">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
                <translation x="0" y="-3" z="0"/>
            </transformations>

            <descendants>
                <leaf type="sphere" radius="0.5" slices="12" stacks="12"/>
            </descendants>
        </node>
        <!-- -->

        <!--Encaixo-->
        <node id="Encaixo">
            <material id="null" />

            <texture id="steel"/>

            <transformations>
                <rotation axis="x" angle="90"/>
            </transformations>

            <descendants>
                <noderef type="Encaixo cima"/>
                <noderef type="Encaixo baixo"/>
            </descendants>
        </node>
        <!-- -->

        <!--Parte de cima do encaixo-->
        <node id="Encaixo cima">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="0" y="-2.5" z="0"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="0.2" topRadius="0.2" height="0.6" slices="12" stacks="8"/>
            </descendants>
        </node>
        <!-- -->

        <!--Parte de baixo do encaixo-->
        <node id="Encaixo baixo">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="0" y="-2.2" z="0"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="0.1" topRadius="0.1" height="0.6" slices="12" stacks="8"/>
            </descendants>
        </node>
        <!-- -->

    
        <!--Fio-->
        <node id="Fio">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="0" y="-1.5" z="0"/>
                <rotation axis="x" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="0.02" topRadius="0.02" height="3" slices="8" stacks="8"/>
            </descendants>
        </node>
        <!-- -->


        <!--Parede-->
        <node id="Parede">
            <material id="null" />

            <texture id="wall"/>

            <transformations>
                <rotation axis="y" angle="90"/>
                <translation x="-15" y="0" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-15" y1="15" x2="15" y2="0"/>
                <noderef id="Janela"/>
            </descendants>
        </node>
        <!-- -->


        <!--Janela-->
        <node id="Janela">
            <material id="null" />

            <texture id="window"/>

            <transformations>
                <translation x="0" y="6" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="10" y1="10" x2="5" y2="5"/>
            </descendants>
        </node>
        <!-- -->


        <!--Mesa-->
        <node id="Mesa">
            <material id="null" />

            <texture id="null"/>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="Tampo" />
                <noderef id="Perna1" />
                <noderef id="Perna2" />
                <noderef id="Perna3" />
                <noderef id="Perna4" />
            </descendants>
        </node>
        <!-- -->

        <!--Tampo redondo-->
        <node id="Tampo">
            <material id="null" />

            <texture id="wood"/>

            <transformations>
                <translation x="0" y="5" z="0"/>
            </transformations>

            <descendants>
                <noderef id="Tampo cima"/>
                <noderef id="Tampo baixo"/>
                <noderef id="Tampo lado1"/>
                <noderef id="Tampo lado2"/>
                <noderef id="Tampo lado3"/>
                <noderef id="Tampo lado4"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de cima do tampo-->
        <node id="Tampo cima">
            <material id="null" />

            <texture id="null"/>

            <transformations>  
                <translation x="0" y="1" z="0"/>
                <rotation axis="x" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-4" y1="-6" x2="4" y2="6"/>
                <noderef id="Snack"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de baixo do tampo-->
        <node id="Tampo baixo">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <rotation axis="x" angle="-90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-4" y1="-6" x2="4" y2="6"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado1">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="0" y="0" z="-6"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-4" y1="0" x2="4" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado2">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="0" y="0" z="6"/>
                <rotation axis="y" angle="180"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-4" y1="0" x2="4" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado3">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="-4" y="0" z="0"/>
                <rotation axis="y" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-6" y1="0" x2="6" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado4">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="4" y="0" z="0"/>
                <rotation axis="y" angle="-90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-6" y1="0" x2="6" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna1">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="-3" y="0" z="-5"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna2">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="3" y="0" z="-5"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna3">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="3" y="0" z="5"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna4">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="-3" y="0" z="5"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->


        <!--Template para as pernas da mesa-->
        <node id="Perna">
            <material id="null" />

            <texture id="steel"/>

            <transformations>
                <translation x="0" y="4" z="0"/>
                <rotation axis="x" angle="90"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="1" topRadius="1" height="8" slices="12" stacks="8"/>
            </descendants>
        </node>
        <!-- -->


        <!--Donut e guardanapo-->
        <node id="Snack">
            <material id="null" />

            <texture id="null"/>

            <transformations>
                <translation x="3" y="0.05" z="5"/>
            </transformations>

            <descendants>
                <noderef id="Donut"/>
                <noderef id="Guardanapo"/>
            </descendants>
        </node>
        <!-- -->

        <!--Donut-->
        <node id="Donut">
            <material id="null" />

            <texture id="donut"/>

            <transformations>
                <translation x="0" y="0.5" z="0"/>
            </transformations>

            <descendants>
                <leaf type="torus" inner="1" outer="3" slices="24" loops="16"/> 
            </descendants>
        </node>
        <!-- -->

        <!--Guardanapo-->
        <node id="Guardanapo">
            <material id="null" />

            <texture id="napkin"/>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-2" y1="-2" x2="2" y2="2"/> 
            </descendants>
        </node>
        <!-- -->

    </nodes>
<!-- -->


</lsf>
