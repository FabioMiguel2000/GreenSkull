<lsf>

<!--Initials-->
    <initials>
        <reference length="2" />
        <root id="demoRoot" />

    </initials>
<!-- -->

<!--Cameras-->
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" />
        </ortho>
    </views>
<!-- -->

<!--Illumination-->
    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />          
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        
    </illumination>
<!-- -->

<!--Lights-->
    <lights>
        
        <light id="demoLight">            
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />                   
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            
        </light>
    </lights>
<!-- -->


<!--Textures-->
    <textures>
        <!--Textura para tampo da mesa-->
        <texture id="wood" path="images/woodTexture.jpg" />
        <!--Textura para bulbo da lampada-->
        <texture id="light" path="images/bulbTexture.jpg" />
        <!--Textura para perna da mesa-->
        <texture id="steel" path="images/steelTexture.jpg" />
        <!--Textura para o chao-->
        <texture id="floor" path="images/floorTexture.jpg" />
        <!--Textura para a janela-->
        <texture id="window" path="images/windowTexture.jpg" />
        <!--Textura para a parede-->
        <texture id="wall" path="images/wallTexture.jpg" />
        <!--Textura para a guardanapo-->
        <texture id="mapkin" path="images/napkinTexture.jpg" />
        <!--Textura para a donut-->
        <texture id="donut" path="images/donutTexture.jpg" />
    </textures>
<!-- -->


<!--Materials-->
    <materials>
        <material id="blackMaterial">
            <shininess value="6" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="0" g="0" b="ff" a="1" />
            <specular r="0" g="0" b="ff" a="1" />
            <emissive r="0" g="0" b="ff" a="1" />
        </material>
    </materials>
<!-- -->


<!--Nodes-->
    
    <nodes>

        <!--Root node-->
        <node id="Root"/>
            <material id="ss" />
            <texture id="ss">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
                <translation x="ff" y="ff" z="ff" />
                <rotation axis="yy" angle="ff" />
                <scale sx="ff" sy="ff" sz="ff" />
            </transformations>

            <descendants>
                <noderef id="Mesa" />
                <nodered id="Chao" />
                <nodered id="Luzes" />
                <nodered id="Parede"/>
            </descendants>
        </node>
        <!-- -->


        <!--Chao-->
        <node id="Chao">
            <material id="null" />

            <texture id="floor">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-15" y1="-15" x2="15" y2="15"/>
            </descendants>
        </node>
        <!-- -->


        <!--Luzes-->
        <node id="Luzes">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <nodered id="Luz 1" />
                <nodered id="Luz 2" />
                <nodered id="Luz 3" />
            </descendants>
        </node>
        <!-- -->


        <!--Luz 1-->
        <node id="Luz 1">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <nodered id="Candeeiro" />
            </descendants>
        </node>
        <!-- -->


        <!--Luz 2-->
        <node id="Luz 2">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <nodered id="Candeeiro" />
            </descendants>
        </node>
        <!-- -->


        <!--Luz 3-->
        <node id="Luz 3">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <nodered id="Candeeiro" />
            </descendants>
        </node>
        <!-- -->

        <!--Candeeiro-->
        <node id="Candeeiro">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <nodered id="Lampada" />
                <nodered id="Encaixo" />
                <nodered id="fio" />
                <nodered id="Protecao" />
            </descendants>
        </node>
        <!-- -->


        <!--Protecao do Candeeiro-->
        <node id="Protecao do Candeeiro">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
            </descendants>
        </node>
        <!-- -->

        

        <!--Lampada-->
        <node id="Lampada">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="Bulbo"/>
                <noderef id="Base da lampada"/>
            </descendants>
        </node>
        <!-- -->

        <!--Bulbo-->
        <node id="Bulbo">
            <material id="null" />

            <texture id="bulb">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="sphere" radius="ff" slices="ii" stacks="ii"/>
            </descendants>
        </node>
        <!-- -->

        <!--Base da lampada-->
        <node id="Base da lampada">
            <material id="null" />

            <texture id="steel">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="torus" innerRadius="ff" outerRadius="ff" slices="ff" loops="ii"/>
                <leaf type="torus" innerRadius="ff" outerRadius="ff" slices="ff" loops="ii"/>
                <leaf type="torus" innerRadius="ff" outerRadius="ff" slices="ff" loops="ii"/>
                <leaf type="torus" innerRadius="ff" outerRadius="ff" slices="ff" loops="ii"/>
                <leaf type="cylinder" bottomRadius="ff" topRadius="ff" height="ff" slices="ii" stacks="ii"/>
            </descendants>
        </node>
        <!-- -->

        <!--Encaixo-->
        <node id="Encaixo">
            <material id="blackMaterial" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="ff" topRadius="ff" height="ff" slices="ii" stacks="ii"/>
                <leaf type="cylinder" bottomRadius="ff" topRadius="ff" height="ff" slices="ii" stacks="ii"/>
            </descendants>
        </node>
        <!-- -->

    
        <!--Fio-->
        <node id="Fio">
            <material id="BlackMaterial" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="ff" topRadius="ff" height="ff" slices="ii" stacks="ii"/>
            </descendants>
        </node>
        <!-- -->


        <!--Parede-->
        <node id="Parede">
            <material id="null" />

            <texture id="wall">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="ff" y1="ff" x2="ff" y2="ii"/>
                <noderef id="Janela"/>
            </descendants>
        </node>
        <!-- -->


        <!--Janela-->
        <node id="Janela">
            <material id="null" />

            <texture id="window">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="ff" y1="ff" x2="ff" y2="ii"/>
            </descendants>
        </node>
        <!-- -->


        <!--Mesa-->
        <node id="Mesa">
            <material id="null" />

            <texture id="wood">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="Tampo" />
                <noderef id="Perna1" />
                <noderef id="Perna2" />
                <noderef id="Perna3" />
                <noderef id="Perna4" />
            </descendants>
        </node>
        <!-- -->

        <!--Tampo quadrada-->
        <node id="Tampo">
            <material id="null" />

            <texture id="wood">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
                <translation x="0" y="8" z="0"/>
            </transformations>

            <descendants>
                <noderef id="Tampo cima">
                <noderef id="Tampo baixo">
                <noderef id="Tampo lado1">
                <noderef id="Tampo lado2">
                <noderef id="Tampo lado3">
                <noderef id="Tampo lado4">
            </descendants>
        </node>
        <!-- -->

        <!--Face de cima do tampo-->
        <node id="Tampo cima">
            <material id="null" />

            <transformations>
                <rotation axis="x" angle="90"/>
                <translation x="0" y="1" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-6" y1="-9" x2="6" y2="9"/>
                <noderef id="Snack"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de baixo do tampo-->
        <node id="Tampo baixo">
            <material id="null" />

            <transformations>
                <rotation axis="x" angle="-90"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-6" y1="-9" x2="6" y2="9"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado1">
            <material id="null" />

            <transformations>
                <translation x="0" y="0" z="-9"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-6" y1="0" x2="6" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado2">
            <material id="null" />

            <transformations>
                <rotation axis="y" angle="180"/>
                <translation x="0" y="0" z="9"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-6" y1="0" x2="6" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado3">
            <material id="null" />

            <transformations>
                <rotation axis="y" angle="90"/>
                <translation x="-6" y="0" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-9" y1="0" x2="9" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Face de lado do tampo-->
        <node id="Tampo lado4">
            <material id="null" />

            <texture id="null">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
                <rotation axis="y" angle="-90"/>
                <translation x="6" y="0" z="0"/>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-9" y1="0" x2="9" y2="1"/>
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna1">
            <material id="null" />

            <texture id="null">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
                <translation x="-5" y="0" z="-8"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna2">
            <material id="null" />

            <texture id="null">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
                <translation x="5" y="0" z="-8"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna3">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
                <translation x="5" y="0" z="8"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->

        <!--Perna da mesa-->
        <node id="Perna4">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
                <translation x="-5" y="0" z="8"/>
            </transformations>

            <descendants>
                <noderef id="Perna" />
            </descendants>
        </node>
        <!-- -->


        <!--Template para as pernas da mesa-->
        <node id="Perna">
            <material id="null" />

            <texture id="clear">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="Suporte">
                <noderef id="Base da perna" />
            </descendants>
        </node>
        <!-- -->

        <!--Suporte da perna-->
        <node id="Suporte">
            <material id="null" />

            <texture id="clear">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
                <rotation axis="x" angle="90"/>
                <translation x="0" y="4" z="0"/>
            </transformations>

            <descendants>
                <leaf type="cylinder" bottomRadius="1" topRadius="1" height="8" slices="12" stacks="8"/>
            </descendants>
        </node>


        <!--Base da perna-->
        <node id="Base da perna">
            <material id="null" />

            <texture id="clear">
                <amplification afs="ff" aft="ff" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.6" y1="-0.6" x2="0.6" y2="0.6"/>
            </descendants>
        </node>
        <!-- -->

        <!--Donut e guardanapo-->
        <node id="Snack">
            <material id="null" />

            <texture id="clear">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
                <translation x="3" y="0.05" z="5"/>
            </transformations>

            <descendants>
                <noderef id="Donut">
                <noderef id="Guardanapo">
            </descendants>
        </node>
        <!-- -->

        <!--Donut-->
        <node id="Donut">
            <material id="donut" />

            <texture id="clear">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
                <translation x="0" y="0.5" z="0"/>
            </transformations>

            <descendants>
                <leaf type="torus" inner="1" outer="3" slices="24" loops="16"/> 
            </descendants>
        </node>
        <!-- -->

        <!--Guardanapo-->
        <node id="Guardanapo">
            <material id="null" />

            <texture id="napkin">
                <amplification afs="" aft="" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-2" y1="-2" x2="2" y2="2"/> 
            </descendants>
        </node>
        <!-- -->

    </nodes>
<!-- -->


</lsf>
